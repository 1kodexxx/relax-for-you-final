---
import "@/styles/floating-buttons.css";
---

<!-- === ФИКСИРОВАННЫЕ КНОПКИ === -->
<div class="floating-controls">
  <!-- Кнопка включения музыки -->
  <button id="musicToggle" class="float-btn left visible" aria-label="Включить музыку">
    <svg
      class="icon-music"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path d="M9 18V5l12-2v13"></path>
      <circle cx="6" cy="18" r="3"></circle>
      <circle cx="18" cy="16" r="3"></circle>
    </svg>
  </button>

  <!-- Кнопка "Наверх" -->
  <button id="scrollTopBtn" class="float-btn right" aria-label="Наверх">↑</button>
</div>

<script is:inline>
  (() => {
    const scrollBtn = document.getElementById("scrollTopBtn");
    const musicBtn = document.getElementById("musicToggle");

    // === Кнопка "Наверх" ===
    scrollBtn?.addEventListener("click", () => {
      window.scrollTo({ top: 0, behavior: "smooth" });
    });

    // === Музыка ===
    let isPlaying = false;
    let currentIndex = 0;

    const playlist = ["/sounds/voice.mp3", "/sounds/music.mp3"];
    let audio = null;

    const playNext = () => {
      if (currentIndex >= playlist.length) {
        isPlaying = false;
        currentIndex = 0;
        musicBtn.classList.remove("active");
        musicBtn.setAttribute("aria-label", "Включить музыку");
        return;
      }

      audio = new Audio(playlist[currentIndex]);
      audio.addEventListener("ended", () => {
        currentIndex++;
        playNext();
      });
      audio.play().catch((err) => console.warn("Не удалось воспроизвести:", err));
    };

    musicBtn?.addEventListener("click", () => {
      if (!isPlaying) {
        isPlaying = true;
        currentIndex = 0;
        musicBtn.classList.add("active");
        musicBtn.setAttribute("aria-label", "Выключить музыку");
        playNext();
      } else {
        isPlaying = false;
        currentIndex = 0;
        audio?.pause();
        audio = null;
        musicBtn.classList.remove("active");
        musicBtn.setAttribute("aria-label", "Включить музыку");
      }
    });

    window.addEventListener("scroll", () => {
      if (window.scrollY > 300) {
        scrollBtn?.classList.add("visible");
      } else {
        scrollBtn?.classList.remove("visible");
      }
    });
  })();
</script>
